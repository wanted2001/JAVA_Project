package CardpackTest;

import java.util.HashMap;

public class CardPack2 {
	
	private int cnt = 0;

	public CardPack2() {

		char shape = '♥';
		for (int i = 1; i <= 4; i++) { 
			switch (i) {
			case 1:
				shape = '♥';
				break;
			case 2:
				shape = '◆';
				break;
			case 3:
				shape = '♠';
				break;
			case 4:
				shape = '♣';
				break;
			}
			for (int j = 1; j <= 13; j++) { 
				Card2 c = new Card2();
				c.setShape(shape);
				c.setNum(j);
				
			}
		}
	}
	
	public void cardPrint(char a, int b) {
	HashMap<Character, Integer> map = new HashMap<Character, Integer>();
	map.put(a,b);
	for(Character tmp : map.keySet()) {
		System.out.println(tmp+map.get(tmp));
	}
	
	}

}
