package ezen_messenger;

import java.io.IOException;
import java.util.Scanner;

import test.FriendsManager;

public class Email_Main {

	public static void main(String[] args) throws IOException {
		Scanner sc=new Scanner(System.in);
		FriendsManager fm = new FriendsManager();
//		Messenger mg=new Messenger();
		int menu=0;
		
		do {
			System.out.println("ezen 메신저");
			System.out.println("1.쪽지|2.친구|3.로그아웃");
			System.out.println(">>menu를 입력하세요>>");
			menu=sc.nextInt();
			switch(menu){
			case 1: fm.friendsList();
				break;
			case 2: fm.friendsAdd(sc);
				break;
			case 3:
				break;
			default: 
				System.out.println("잘못된 메뉴입니다");
				break;
			}
			
		}while(menu!=3); {
			System.out.println("종료");
		}
		
		sc.close();
		
		

	}

}
