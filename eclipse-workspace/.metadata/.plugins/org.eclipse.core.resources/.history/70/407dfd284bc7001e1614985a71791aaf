package ezen_messenger1;

import java.io.IOException;
import java.util.Scanner;

public class MessengerMain{

	
	public void main(String[] args) throws IOException{
		Scanner sc=new Scanner(System.in);
		AccountManager am = new AccountManager();
		MessengerManager mg=new MessengerManager();
		FriendsManager fm = new FriendsManager();
		Login l = new Login();
		int menu=-1;
		do {
			System.out.println("ezen 메신저");
			System.out.println("1.회원가입|2.로그인|3.친구");
			System.out.println("4.쪽지|5.종료");
			System.out.println(">>menu를 입력하세요>>");
			menu=sc.nextInt();
			switch(menu){
			case 1: am.AccountAddres(sc);
				
				break;
			case 2: l.loginPass(sc);
				
				break;
			case 3: fm.friendsMain(sc);
				
			case 4: mg.m.mailBoxMain(sc);
				break;
			case 5: loginPass(sc);
				break;
			default:
			System.out.println("잘못된 메뉴입니다");
			}
		}while(menu!=5); {
			System.out.println("종료");
		}
		
		sc.close();
		
		

	}

}