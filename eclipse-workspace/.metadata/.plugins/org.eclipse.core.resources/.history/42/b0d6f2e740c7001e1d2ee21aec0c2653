package ezen_messenger;

import java.io.IOException;
import java.util.Scanner;

public class Email_Main {

	public static void main() throws IOException {
		Scanner sc=new Scanner(System.in);
//		Messenger mg=new Messenger();
		int menu=0;
		
		do {
			System.out.println("ezen 메신저");
			System.out.println("1.쪽지|2.친구|3.로그아웃");
			System.out.println(">>menu를 입력하세요>>");
			menu=sc.nextInt();
			switch(menu){
			case 1:
				break;
			case 2: FriendsManager.main();
				break;
			case 3: Email_Main.main();
				break;
			default: 
				System.out.println("잘못된 메뉴입니다");
				break;
			}
			
		}while(menu!=3); {
			System.out.println("종료");
		}
		
		sc.close();
		
		

	}

}
