package ezen_messenger;

import java.io.IOException;
import java.util.Scanner;

public class Login_Before {

	public static void main(String[] args) throws IOException {
		Scanner sc  = new Scanner(System.in);
		AccountManager ac = new AccountManager();
		Login lg = new Login();
		int menu = -1;
		do {
			System.out.println("ezen 메신저에 오신걸 환영합니다.");
			System.out.println("|1.회원가입 |2.로그인 |3.도움말");
			menu = sc.nextInt();
			switch(menu) {
			case 1 : ac.AccountAddres(sc); break;
			case 2 : lg.login(sc); break;
			case 3 : System.out.println("메신저 입니다."); break;
			default : System.out.println("잘못된 메뉴 입니다."); break;
			
			}
			
		}while(menu!=3);
		
		
		
		
		sc.close();

	}

}
