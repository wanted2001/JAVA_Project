package CardpackTest;

public class Card2 {
	private int num; 
	private char shape;
	
	public Card2() {}
	
	
	public void print() {
		switch(num) {
			case 11 :System.out.print(" "+shape+"J");
			break;
			case 12 :System.out.print(" "+shape+"Q");
			break;
			case 13 :System.out.print(" "+shape+"K");
			break;
			default :if(num>13 || num<1) { 
				num = 1;
			}
			System.out.print(" "+shape+num);
		}
	}
	
	public int getNum() {
		return num;
	}

	public void setNum(int num) {
		switch(num) {
		case 1 : this.num = (char)'A'; break;
		case 11: this.num = (char)'j'; break;
		case 12: this.num = (char)'Q'; break;
		case 13: this.num = (char)'K'; break;
		}
	}

	public char getShape() {
		return shape;
	}

	public void setShape(char shape) {
		if(shape=='♥'||shape=='◆'||shape=='♠'||shape=='♣') {
			this.shape = shape;
		}else {
			shape='♥';
		}
		
	}
	
}
